@model ElectronicsStore2.Models.product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Product</h2>

<div class="col-md-3">
    <img src="@Url.Content(Model.item_img)" height="200">
</div>

<div class="col-md-9">
    <h2>Are you sure you want to delete this product?</h2>
    <hr />
    <dl>
        <dt>@Html.DisplayNameFor(i => i.item_brand)</dt>
        <dd>@Html.DisplayFor(i => i.item_brand)</dd>

        <dt>@Html.DisplayNameFor(i => i.item_category)</dt>
        <dd>@Html.DisplayFor(i => i.item_category)</dd>

        <dt>@Html.DisplayNameFor(i => i.item_name)</dt>
        <dd>@Html.DisplayFor(i => i.item_name)</dd>

        <dt>@Html.DisplayNameFor(i => i.item_parent)</dt>
        <dd>@Html.DisplayFor(i => i.item_price)</dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" class="btn btn-default" value="Yes" />
        @Html.ActionLink("No", "Index", "Home", htmlAttributes: new { @class = "btn btn-default" })
    }


</div>

@Html.ActionLink("Back to Index", "Index")

